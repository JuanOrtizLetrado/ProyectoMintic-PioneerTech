{{#each errors}}
<div class="alert alert-danger alert-dismissible fade show" role="alert">
  {{text}}
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
{{/each}}

<div class="col-md-4 mx-auto">
  <div class="card">
    <div class="card-header">
      <h3>Editar venta</h3>
    </div>
    <div class="card-body">
      <form action="/ventas/edit-venta/{{venta._id}}?_method=PUT" method="POST">
        <input type="hidden" name="_method" value="PUT">
        <div class="form-group">
          <input type="text" name="nombrecliente" class="form-control" value="{{venta.nombrecliente}}" />
        </div>
        <br>
        <div class="form-group">
          <textarea name="nombrep" class="form-control"> {{venta.nombrep}}</textarea>
        </div>
        <br>
        <div class="form-group">
          <input type="number" name="valorp" class="form-control" value="{{venta.valorp}}" />
        </div>
        <br>
        <div class="form-group">
          <input type="number" name="cantidadp" class="form-control" value="{{venta.cantidadp}}" />
        </div>
        <br>
        <div class="form-group">
          <button class="btn btn-primary btn-block" type="submit">
            Guardar
          </button>
        </div>
      </form>
    </div>
  </div>
</div>