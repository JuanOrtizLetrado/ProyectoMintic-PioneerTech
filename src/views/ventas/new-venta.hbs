<div class="col-md-4 mx-auto">
  <div class="card text-center">
    <div class="card-header">
      <h3>Nueva Venta</h3>
    </div>
    <div class="card-body">
      <form action="/ventas/new-venta" method="POST">
        <div class="form-group">
          <input type="text" name="nombrecliente" class="form-control" placeholder="Nombre Cliente" autofocus/>
        </div>
        <br>
        <div class="form-group">
          <textarea name="nombrep" class="form-control" placeholder="Nombre Producto"></textarea>
        </div>
        <br>
        <div class="form-group">
          <input type="Number" name="valorp" class="form-control" placeholder="Valor Productos" autofocus/>
        </div>
        <br>
        <div class="form-group">
          <input type="Number" name="cantidadp" class="form-control" placeholder="Cantidad Productos" autofocus/>
        </div>
        <br>
        <div class="form-group">
          <button class="btn btn-primary btn-block" type="submit">
            Guardar
          </button>
        </div>
      </form>
    </div>
  </div>
</div>